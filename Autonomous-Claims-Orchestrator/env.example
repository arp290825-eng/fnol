# OpenAI API Configuration (required for claim processing)
OPENAI_API_KEY=your_openai_api_key_here

# Model: gpt-4o recommended for Vision (image analysis); gpt-4-1106-preview for text only
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.1

# Demo Configuration
DEMO_MODE=true
ENABLE_REAL_AI=false

# IMAP Configuration (FNOL email ingestion - Gmail/Outlook)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
SENDER_EMAIL=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# FNOL classifier: only ingest FNOL-related emails (set to false to ingest all)
# LLM assesses content when OPENAI_API_KEY is set; otherwise all emails are ingested
FNOL_FILTER_ENABLED=true

# Sync read emails: set to true to include already-read emails (default: true)
IMAP_SYNC_INCLUDE_READ=true

# Max emails per sync when including read (default: 100)
IMAP_SYNC_MAX_EMAILS=100

# Mailbox: INBOX (default). For read emails, Gmail uses "[Gmail]/All Mail" automatically.
# Set explicitly if needed: IMAP_MAILBOX="[Gmail]/All Mail"
# Enable All Mail in Gmail: Settings > Labels > All Mail > Show in IMAP